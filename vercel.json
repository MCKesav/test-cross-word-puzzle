{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/health",
            "dest": "/api/health.js"
        },
        {
            "src": "/api/crossword/generate",
            "dest": "/api/crossword/generate.js"
        },
        {
            "src": "/api/crossword/topics",
            "dest": "/api/crossword/topics.js"
        },
        {
            "src": "/api/crossword/hint",
            "dest": "/api/crossword/hint.js"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}